<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DialogActivity">

    <Button
            android:text="Toasts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="25dp" android:id="@+id/btn_toast"/>
    <Button
            app:layout_constraintLeft_toLeftOf="@id/btn_toast"
            app:layout_constraintTop_toBottomOf="@id/btn_toast"
            android:text="SnackBars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="95dp"
            tools:layout_editor_absoluteX="24dp" android:id="@+id/btn_snackbar"/>
    <Button
            app:layout_constraintLeft_toLeftOf="@id/btn_snackbar"
            app:layout_constraintTop_toBottomOf="@id/btn_snackbar"
            android:text="Alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="162dp"
            tools:layout_editor_absoluteX="25dp" android:id="@+id/btn_alert"/>
    <Button
            app:layout_constraintLeft_toLeftOf="@id/btn_alert"
            app:layout_constraintTop_toBottomOf="@id/btn_alert"
            android:text="Selectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="230dp"
            tools:layout_editor_absoluteX="25dp" android:id="@+id/btn_selector"/>
    <Button
            app:layout_constraintLeft_toLeftOf="@id/btn_selector"
            app:layout_constraintTop_toBottomOf="@id/btn_selector"
            android:text="Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="298dp"
            tools:layout_editor_absoluteX="25dp" android:id="@+id/btn_progress"/>
</android.support.constraint.ConstraintLayout>