<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintVertical_bias="0.022"/>
    <Button
            android:text="TestIntent"
            app:layout_constraintLeft_toLeftOf="@id/textview"
            app:layout_constraintTop_toBottomOf="@id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="54dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/btn_test"/>
    <Button
            android:text="TestDialog"
            app:layout_constraintTop_toBottomOf="@id/btn_test"
            app:layout_constraintLeft_toLeftOf="@id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="123dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/btn_dialog"/>

</android.support.constraint.ConstraintLayout>